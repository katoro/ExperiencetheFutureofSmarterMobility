<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.city.button.CityHotplaceFragment">


    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="50dp"
        android:text=""/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityHotplaceToggle"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cityHotplaceToggleBtn1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="50sp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cityHotplaceToggleBtn2"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:textSize="50sp"
            app:layout_constraintHorizontal_weight="1"
            android:maxLines="2"
            android:text=""/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cityHotplaceToggleBtn3"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:textSize="50sp"
            android:maxLines="2"
            app:layout_constraintHorizontal_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cityHotplaceToggleBtn4"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:textSize="50sp"
            app:layout_constraintHorizontal_weight="1"
            android:maxLines="2"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/awsailoading"/>

</androidx.constraintlayout.widget.ConstraintLayout>